{{#each error in errors}}
  <h2>Errors:</h2>
  <div class="alert alert-danger">
    {{error}}
  </div>
{{/each}}

{{#if success}}
  <div class="alert alert-info">
    {{success}}
  </div>
{{/if}}
<h2>Change Password</h2>
<form {{action 'changePass' on='submit'}}>
  {{input id='change-pass-old-password' class='form-control' value=current_password type='password' placeholder='Old Password'}}
  {{input id='change-pass-new-password' class='form-control' value=password1 type='password' placeholder='New Password'}}
  <span {{bind-attr class="passwordError:has-error"}}>
    {{view App.PasswordConfirmField id="change-pass-new-password2" class='form-control' value=password2 type='password' placeholder='Re-Enter New Password'}}
    <span {{bind-attr class="passwordError:password-error :help-block"}}>{{passwordError}}</span>
  </span>
  {{input id='changepass-submit-btn' class='btn btn-lg btn-success col-xs-12' type='submit' value='Update Password'}}
</form>
